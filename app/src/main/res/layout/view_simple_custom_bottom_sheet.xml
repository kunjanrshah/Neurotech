<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/round_top_corner_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:text="Change ID"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgClose"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/close"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorGray"
        android:layout_height="3dp"/>


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtId"
            android:background="@drawable/round_corner_gray"
            android:layout_width="250dp"
            android:fontFamily="@font/montserrat_medium"
            android:hint="New ID"
            android:digits="0123456789"
            android:inputType="number"
            android:textSize="18sp"
            android:singleLine="true"
            android:nextFocusForward="@+id/edtPass"
            android:imeOptions="actionNext"
            android:paddingLeft="20dp"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/edtPass"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Password"
            android:singleLine="true"
            android:inputType="number"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corner_gray"
            android:layout_width="250dp"
            android:layout_height="50dp"/>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:text="Cancel"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:background="@drawable/round_corner_cancel"

        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnChange"
        android:layout_marginLeft="30dp"
        android:layout_weight="1"
        android:text="Change"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:background="@drawable/round_corner_color_primary_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>


</LinearLayout>